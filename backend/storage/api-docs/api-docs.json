{
    "openapi": "3.0.0",
    "info": {
        "title": "Star Wars API Documentation",
        "description": "API for accessing Star Wars data (People, Films, etc.)",
        "contact": {
            "email": "your@email.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/v1",
            "description": "Star Wars API (Development)"
        }
    ],
    "paths": {
        "/star-wars/people": {
            "get": {
                "operationId": "3f10afef3eefadf2aa703b21139b904a",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Name of the person to search for (e.g., 'luke')",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "Luke Skywalker"
                                            },
                                            "uid": {
                                                "type": "string",
                                                "example": "1"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/star-wars/person": {
            "get": {
                "operationId": "1e35f1ffdc5e0f53592277721d8e6518",
                "parameters": [
                    {
                        "name": "uid",
                        "in": "query",
                        "description": "Get one person by uid (e.g., '1')",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "Luke Skywalker"
                                        },
                                        "birth_year": {
                                            "type": "string",
                                            "example": "19BBY"
                                        },
                                        "gender": {
                                            "type": "string",
                                            "example": "male"
                                        },
                                        "eye_color": {
                                            "type": "string",
                                            "example": "blue"
                                        },
                                        "hair_color": {
                                            "type": "string",
                                            "example": "blond"
                                        },
                                        "height": {
                                            "type": "string",
                                            "example": "172"
                                        },
                                        "mass": {
                                            "type": "string",
                                            "example": "77"
                                        },
                                        "movies": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "description": {
                                                        "type": "string",
                                                        "example": "A New Hope"
                                                    },
                                                    "uid": {
                                                        "type": "string",
                                                        "example": "1"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}